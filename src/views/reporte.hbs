<!-- src/views/reporte.hbs -->

<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Reporte de los empleados</h3>
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Edad</th>
                    <th scope="col">Correo_electronico</th>
                </tr>
            </thead>
            <tbody>
                {{#each empleados}}
                {{#if disponibilidad}}
                <tr>
                    <td>{{nombre}}</td>
                    <td>{{apellido}}</td>
                    <td>{{edad}}</td>
                    <td>{{correo_electronico}}</td>
                </tr>
                {{/if}}
                {{/each}}
            </tbody>
        </table>
        <a href="/list" class="btn btn-secondary">Volver</a>
    </div>
</div>
